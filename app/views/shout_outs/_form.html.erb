<%= form_for(shout_out) do |f| %>
  <% if shout_out.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(shout_out.errors.count, "error") %> prohibited this shout_out from being saved:</h2>

      <ul>
      <% shout_out.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <fieldset class="form-group">
    <div class="field">
      <%= f.label :comment %>
      <%= f.text_area :comment %>
    </div>
  </fieldset>

  <fieldset class="form-group">
    <div class="field col-xs-4">
      <%= f.label :latitude%>
      <%= f.number_field :latitude, readonly: true, data: { geolocation: 'latitude' } %>
    </div>

    <div class="field col-xs-4">
      <%= f.label :longitude %>
      <%= f.number_field :longitude, readonly: true, data: { geolocation: 'longitude' } %>
    </div>

    <div class="field col-xs-4">
      <%= f.label :accuracy %>
      <%= f.number_field :accuracy, readonly: true, data: { geolocation: 'accuracy' } %>
    </div>
  </fieldset>

  <fieldset class="form-group">
    <div class="field">
      <%= f.label :confirmed %>
      <%= f.check_box :confirmed %>
    </div>
  </fieldset>

  <fieldset class="form-group">
    <div class="actions">
      <%= f.submit %>
    </div>
  </fieldset>
<% end %>
